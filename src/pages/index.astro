---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main>
    <section>
      <h1 class="visuallyhidden">{SITE_TITLE}</h1>
      <p>
        Hi there, I'm Eric! I'm a software engineer with a graphic design
        background.
      </p>
      <p>
        I love building <span aria-hidden="true">✨</span>
        <em>things</em>
        <span aria-hidden="true">✨</span>
        on the web.
      </p>
      <p>
        I like simple software, and as little code as possible to get things
        done.
      </p>

      <!-- <p>
        I enjoy gravitating around the front-end, in the intersection between
      </p> -->
      <!-- interactive, clicky clicky, typey typey -->

      <p><a href="/about">Read more about me</a></p>
    </section>
    <section>
      <!-- Pull github shit here? -->
    </section>
    <section>
      <!-- <h2>Latest from the blog</h2> -->
      <!-- Latest post -->
    </section>
  </main>
  <aside>
    <model-viewer
      src="assets/img/coral.glb"
      alt="Millepora alcicornis"
      poster="assets/img/coral-poster.png"
      shadow-intensity="1"
      camera-orbit="93.46deg 92.18deg 1.175m"
      field-of-view="30deg"
      camera-controls
      auto-rotate
    />
    <!-- Millepora alcicornis provided by the Smithsonian Digitization Programs Office -->
    <!-- https://3d.si.edu/object/3d/millepora-alcicornis:92c491e7-d31d-403d-b091-316d45dfbc2c -->

    <!-- Tech cloud (marquee) -->
  </aside>
</Layout>

<!-- REFERENCES: https://thinkdobecreate.com/ -->
<!-- https://www.cassie.codes -->

<style>
  html {
    max-width: unset;
    padding: 0;
  }
  body {
    display: grid;
    grid-template-areas:
      "header"
      "aside"
      "main"
      "footer";
  }

  main {
    grid-area: main;
  }

  aside {
    grid-area: aside;
    background-color: var(--highlight-color);
  }

  model-viewer {
    height: 100%;
    width: 100%;
  }

  @media (max-width: 47.99em) {
    :global(header) {
      padding-left: var(--spacing);
      padding-right: var(--spacing);
      padding-top: var(--spacing);
    }

    :global(footer) {
      padding-left: var(--spacing);
      padding-right: var(--spacing);
    }

    main {
      padding: var(--spacing) var(--spacing) 0;
    }

    aside {
      height: 50vh;
    }
  }

  @media (min-width: 48em) {
    body {
      height: 100vh;
      column-gap: 2.5em;
      grid-template-areas:
        "aside header"
        "aside main"
        "aside footer";
      grid-template-columns: 5fr 7fr;
      grid-template-rows: 1fr auto 1fr;
    }

    :global(header) {
      background-color: transparent;
    }

    aside {
    }
  }

  /* TODO even larger screens */
</style>

<script>
  import "@google/model-viewer";
</script>
